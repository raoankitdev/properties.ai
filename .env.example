# AI Real Estate Assistant - Environment Variables
# Copy this file to .env and fill in your API keys

# LLM Provider API Keys (at least one required)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...
CONTEXT7_API_KEY=...

# Optional: Ollama API base URL (for local models)
# OLLAMA_API_BASE=http://localhost:11434

# V4 API access key (FastAPI)
# API_ACCESS_KEY=dev-secret-key
# API_RATE_LIMIT_ENABLED=true
# API_RATE_LIMIT_RPM=600

# Optional: Email Configuration (for Phase 5 notifications)
# SMTP_USERNAME=your.email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_PROVIDER=gmail

# CORS (production)
# ENVIRONMENT=production
# CORS_ALLOW_ORIGINS=https://yourapp.com,https://studio.vercel.app

# Uptime Monitor (optional)
# UPTIME_MONITOR_ENABLED=true
# UPTIME_MONITOR_HEALTH_URL=http://localhost:8000/health
# UPTIME_MONITOR_EMAIL_TO=ops@example.com
# UPTIME_MONITOR_INTERVAL=60
# UPTIME_MONITOR_FAIL_THRESHOLD=3
# UPTIME_MONITOR_COOLDOWN_SECONDS=1800

# Frontend (Next.js) client config
# NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Optional: Redis (MCP/caching/session)
# REDIS_URL=redis://localhost:6379
